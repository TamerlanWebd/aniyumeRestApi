{
    "info": {
        "_postman_id": "aniyume-api-collection",
        "name": "Aniyume API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Anime",
            "item": [
                {
                    "name": "Get List (V2)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/anime",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v2",
                                "anime"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Search",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/anime/search?q=naruto",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "anime",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "naruto"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Anime (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"New Anime\",\n    \"genre\": \"Action\",\n    \"description\": \"Description\",\n    \"imageUrl\": \"http://example.com/image.jpg\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/anime",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "anime"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "System",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "health"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Analytics Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/analytics/dashboard",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "analytics",
                                "dashboard"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000"
        }
    ]
}